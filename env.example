# AI Provider Configuration (Choose one)
# Option 1: Doubao (Default)
AI_PROVIDER=doubao
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_MODEL=doubao-seed-1-6-flash-250615
DOUBAO_MODEL_DETECTION=doubao-seed-1-6-flash-250615

# Option 2: DeepSeek
# AI_PROVIDER=deepseek
 DEEPSEEK_API_KEY=your_deepseek_api_key_here
 DEEPSEEK_MODEL=deepseek-chat
 DEEPSEEK_MODEL_DETECTION=deepseek-chat

# Option 3: OpenAI
# AI_PROVIDER=openai
 OPENAI_API_KEY=your_openai_api_key_here
 OPENAI_MODEL=gpt-4o-mini
 OPENAI_MODEL_DETECTION=gpt-4.1-nano

# Option 4: Anthropic Claude
# AI_PROVIDER=anthropic
 ANTHROPIC_API_KEY=your_anthropic_api_key_here
 ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
 ANTHROPIC_MODEL_DETECTION=claude-3-haiku-20240307

# Option 5: Google Gemini
# AI_PROVIDER=google
 GOOGLE_API_KEY=your_google_api_key_here
 GOOGLE_MODEL=gemini-1.5-pro
 GOOGLE_MODEL_DETECTION=gemini-1.5-flash

# Option 6: Local Model (Ollama)
# AI_PROVIDER=local
 LOCAL_BASE_URL=http://localhost:11434/v1
 LOCAL_MODEL=llama3.2:3b

# Option 7: Custom Provider
# AI_PROVIDER=custom
 CUSTOM_AI_BASE_URL=https://your-custom-api.com/v1
 CUSTOM_AI_MODEL=your-model-name
 CUSTOM_AI_API_KEY=your_api_key

# Database Configuration
# PostgreSQL/Supabase (required)
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://user:password@host:port/database
# For Supabase, get the connection string from your project settings

# Application Configuration
PUBLIC_APP_NAME=Polyglot Singer
PUBLIC_APP_URL=http://localhost:5173

# Security (generate a random 32+ character string)
SESSION_SECRET=your_random_session_secret_here_minimum_32_characters

# Supabase 配置
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key # 可选，仅后端管理用户时用
